
{% extends "layout.twig" %}

{% block content %}

{{widget('extendednavigation', 'navigationheader', {})|raw}}

<header class="bk-header">
    <div class="wrapper clearfix">
        <div class="companyheader clearfix">
            {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
            {{widget('companyname', 'companyname', {"business": "LA VINATERIA"})|raw}}
            {{widget('content', 'headercontent', {"content":"<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec eros non enim condimentum tristique. Fusce commodo lectus ac neque tristique auctor.</p>"})|raw}}
            <div class="header-ornament"></div>
        </div>
        {{widget('menusections', 'menusections1', {})|raw}}
    </div><!--end wrapper clearfix-->
</header>

{{widget('menu', 'menu1', {})|raw}}

<footer class="bk-footer">
    <div class="wrapper clearfix">
        {{widget('content', 'footercolumn1content', {"content":"<p>Lorem Ipsum Dolor</p>"})|raw}}
        {{widget('socialicons', 'footercolumn1socialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
    </div> 
</footer>

{% endblock %}
